<script>
const preco = 10;
const chavePix = "vemnasorte12@gmail.com";

function atualizarTotal() {
  let qtd = parseInt(document.getElementById("quantidade").value);
  let total = qtd * preco;
  document.getElementById("total").innerText = "Total: R$ " + total.toFixed(2).replace(".", ",");
  
  // Atualiza QR Code Pix dinamicamente
  const qrData = `pix:${chavePix}?amount=${total}&message=Compra+Vem+na+Sorte`;
  document.getElementById("qrCode").src = "https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=" + encodeURIComponent(qrData);
}

// Inicializa QR Code na carga da página
window.onload = atualizarTotal;

function pagar() {
  let qtd = parseInt(document.getElementById("quantidade").value);
  let total = qtd * preco;
  let pagamento = document.getElementById("pagamento").value;

  if(pagamento === "pix") {
    // Abre QR Code ou link Pix
    const pixUrl = `https://api-pix-url.com/pay?chave=${chavePix}&valor=${total}&descricao=Compra+Vem+na+Sorte`;
    window.location.href = pixUrl;
  } else {
    // Link de cartão
    window.location.href = "https://www.mercadopago.com.br/checkout/v1/redirect?pref_id=SEU_PREF_ID";
  }
}
</script>

